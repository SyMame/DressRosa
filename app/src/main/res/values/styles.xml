<resources>

    <!-- application de base.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Thème personnalisé. -->
        <item name="colorPrimary">#85AD</item>
        <item name="colorPrimaryDark">#85AD</item>
        <item name="colorAccent">#85AD</item>
    </style>

    <style name="WhiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Thème personnalisé. -->
        <item name="colorPrimary">#33BDFF</item>
        <item name="colorPrimaryDark">#85AD</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/rounded_shape</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="AppTheme.RoundedCornerDarkMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/dark_rounded_shape</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="RedProgressBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Thème personnalisé. -->
        <item name="colorPrimary">#33BDFF</item>
        <item name="colorPrimaryDark">#B2E6ff</item>
        <item name="colorAccent">#85AD</item>
    </style>

    <style name="TealTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Thème personnalisé. -->
        <item name="colorPrimary">#33BDFF</item>
        <item name="colorPrimaryDark">#B2E6ff</item>
        <item name="colorAccent">#85AD</item>>
    </style>

    <style name="fonts">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="headingfonts">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="CustomTheme" parent="MaterialDrawerTheme">
        <!-- Défintion des   attrs de thème de couleur appcompat -->
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary_dark</item>
        <item name="colorAccent">@color/material_drawer_accent</item>
        <item name="titleTextColor">@color/md_grey_600</item>

        <!-- Thème spécifiques à MaterialDrawer -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_header_selection_text
        </item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Thème personnalisé.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_activity_background</item>
    </style>

    <style name="homegridtext">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="homegridimage">
        <item name="android:gravity"></item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <!--Définition des couleurs pour EditText de TextInputLayout -->
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Couleur d'indication et couleur d'étiquette à l'état FAUX -->
        <item name="android:textColorHint">#9575cd</item>
        <item name="android:textSize">20sp</item>
        <!--   Couleur d'étiquette en état VRAI et couleur de barre FAUX et État VRAI -->

        <item name="colorAccent">@color/primary</item>
        <item name="colorControlNormal">#9575cd</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="homegridcard">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="elevation">5dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="notificationstyle">
        <item name="background">@color/light_grey</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
